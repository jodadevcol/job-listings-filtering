---
import '@fontsource-variable/league-spartan';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-body">
		<div class="absolute top-0 left-0 right-0 w-full h-40 bg-shape z-0" style="background-image: url(/img/effects/mask.svg)"></div>

		<div id="main-content" class="relative z-10">
			<main>
				<slot />
			</main>
		</div>

		<footer class="bg-[#264653] px-6 py-5">
			<div class="attribution text-center text-white">
				Challenge by <a href="https://www.frontendmentor.io?ref=challenge" target="_blank" class="hover:text-[#2A9D8F] transition"><strong>Frontend Mentor</strong></a>. 
				Coded by <a href="https://joda.dev" class="hover:text-[#2A9D8F] transition"><strong>joda.dev</strong></a>.
			</div>
		</footer>
	</body>
</html>
<style is:global>
	:root {
		--color-body: #effafa;
		--color-primary: ;
		--color-secondary: ;
		--color-shape: #5CA5A5;
	}

	html {
		font-family: 'League Spartan Variable', system-ui, sans-serif;
	}
</style>
